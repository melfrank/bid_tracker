        <script><![CDATA[	// rightnow stores the current time
		var todaysdate = new GlideDateTime();
		// Create a GlideDateTime object for the Original Bid date
		var originalBiddate = new GlideDateTime(current.original_bid_date);
		originalBiddate.addDaysLocalTime(+14);
		
		// If Bid date is before todaysdate, display error message to the screen
		if(originalBiddate.onOrBefore(todaysdate)){
			gs.addErrorMessage("The Bid Date cannot be in the past.  Please enter a date at least 2 weeks the future.");
			current.setAbortAction(true);
		}]]></script>
